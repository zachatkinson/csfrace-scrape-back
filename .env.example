# CSF Race Scraper - Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration (PostgreSQL 17.6)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=scraper_db
DATABASE_USER=scraper_user
DATABASE_PASSWORD=scraper_password

# Redis Configuration (for caching and job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=development

# Scraper Configuration
MAX_CONCURRENT_SCRAPERS=10
DEFAULT_TIMEOUT=30
MAX_RETRIES=3
REQUEST_DELAY=1.0

# Output Configuration
DEFAULT_OUTPUT_DIR=./converted_content
CREATE_ARCHIVES=false
CLEANUP_AFTER_ARCHIVE=false

# Monitoring (future use)
SENTRY_DSN=
PROMETHEUS_PORT=9090

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Configuration
# Development: Frontend dev servers
# Production: Your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321
# Example for production: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com